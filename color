public class Coche {
    private String color;

    public Coche(String color) {
        this.color = color;
    }

    public void setColor(String color) {
        this.color = color;
    }

    public void mostrar() {
        System.out.println("Color del coche: " + this.color);
    }

    public static void main(String[] args) {
        Coche c = new Coche("Rojo");
        c.mostrar();
        c.setColor("Negro");
        c.mostrar();
    }
}


